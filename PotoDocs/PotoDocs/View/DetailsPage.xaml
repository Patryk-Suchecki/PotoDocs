    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:PotoDocs.ViewModel"
    Title="Szczegóły zlecenia"
    x:DataType="viewmodel:OrderDetailsViewModel">

    <TableView Intent="Form">
        <TableRoot>
            <TableSection>

                <!-- Numer faktury -->
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="Numer faktury" FontAttributes="Bold" HorizontalOptions="StartAndExpand" />
                        <Label Text="{Binding Order.InvoiceNumber}" HorizontalTextAlignment="End" HorizontalOptions="EndAndExpand" />
                    </StackLayout>
                </ViewCell>

                <!-- Data wystawienia faktury -->
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="Data wystawienia faktury" FontAttributes="Bold" HorizontalOptions="StartAndExpand" />
                        <Label Text="{Binding Order.InvoiceIssueDate, StringFormat='{0:dd.MM.yyyy}'}" HorizontalTextAlignment="End" HorizontalOptions="EndAndExpand" />
                    </StackLayout>
                </ViewCell>
