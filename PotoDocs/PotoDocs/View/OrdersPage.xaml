<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PotoDocs.View.OrdersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:PotoDocs.Shared.Models;assembly=PotoDocs.Shared"
    xmlns:viewmodel="clr-namespace:PotoDocs.ViewModel"
    xmlns:converter="clr-namespace:PotoDocs.Converters"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    ios:Page.UseSafeArea="True"
    Title="{Binding Title}"
    x:DataType="viewmodel:OrdersViewModel">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:OrderStatusConverter x:Key="OrderStatusConverter" />
            <converter:OrderStatusColorConverter x:Key="OrderStatusColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid
        ColumnDefinitions="*,*"
        ColumnSpacing="5"
        RowDefinitions="*,Auto"
        RowSpacing="0">
        
        <!-- Odświeżanie -->
        <RefreshView
            Grid.ColumnSpan="2"
            Command="{Binding GetAllCommand}"
            IsRefreshing="{Binding IsRefreshing}">
            <CollectionView
                ItemsSource="{Binding Orders}"
                SelectionMode="None">

                <!-- Szablon dla pustej listy -->
                <CollectionView.EmptyView>
                    <StackLayout Padding="100">
                        <Image
                            HorizontalOptions="Center"
                            Source="nodata.png"
                            HeightRequest="160"
                            WidthRequest="160"
                            VerticalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <!-- Szablon danych -->
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:OrderDto">
                        <!-- SwipeView do obsługi gestów przesuwania -->
                        <SwipeView>
                            <!-- Lewa strona (opcje Swipe) -->
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem Text="Edytuj"
                                               BackgroundColor="LightBlue"
                                               IconImageSource="icon_edit.png"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:OrdersViewModel}}, Path=EditCommand}"
                                               CommandParameter="{Binding .}" />
                                    <SwipeItem Text="Usuń"
                                               BackgroundColor="LightCoral"
                                               IconImageSource="icon_delete.png"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:OrdersViewModel}}, Path=DeleteCommand}"
                                               CommandParameter="{Binding .}" />
                                    <SwipeItem Text="Pobierz fakturę"
                                               BackgroundColor="LightGreen"
                                               IconImageSource="download.svg"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:OrdersViewModel}}, Path=DownloadInvoiceCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.LeftItems>

                            <!-- Zawartość ramki (widoczna treść) -->
                            <Frame Padding="10" Margin="5" HasShadow="True" BorderColor="LightGray">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                    <!-- Dane po lewej stronie -->
                                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                                        <Label Text="{Binding CompanyName}" FontAttributes="Bold" FontSize="16" />
                                        <Label Text="{Binding LoadingDate, StringFormat='Załadunek {0:dd.MM.yyyy}'}" FontSize="14" TextColor="Gray" />
                                        <Label Text="{Binding Price}" FontSize="14" />
                                    </VerticalStackLayout>

                                    <!-- Dane po prawej stronie -->
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5" HorizontalOptions="End">
                                        <Button
                                            Margin="8"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:OrdersViewModel}}, Path=DownloadInvoiceCommand}"
                                            CommandParameter="{Binding .}"
                                            ImageSource="icon_add_order.png"
                                            WidthRequest="80"
                                            HeightRequest="80"
                                            BackgroundColor="White" />
                                        <Label Text="{Binding Driver.FirstAndLastName}" FontSize="14" />
                                        <Label Text="{Binding ., Converter={StaticResource OrderStatusConverter}}" FontSize="14" TextColor="{Binding ., Converter={StaticResource OrderStatusColorConverter}}" />
                                    </VerticalStackLayout>
                                </Grid>
                                <!-- TapGestureRecognizer do wyświetlenia szczegółów -->
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:OrdersViewModel}}, Path=EditCommand}" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Przycisk odświeżania -->
        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="8"
            Command="{Binding GetAllCommand}"
            IsEnabled="{Binding IsNotBusy}"
            ImageSource="icon_refresh.png"
            WidthRequest="80"
            HeightRequest="80"
            BackgroundColor="Transparent" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Margin="8"
            Command="{Binding CreateCommand}"
            IsEnabled="{Binding IsNotBusy}"
            ImageSource="icon_add_order.png"
            WidthRequest="80"
            HeightRequest="80"
            BackgroundColor="Transparent" />

            <!-- Wskaźnik ładowania -->
        <ActivityIndicator
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            HorizontalOptions="Fill"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            Color="{StaticResource Primary}"
            VerticalOptions="Center" />
    </Grid>
</ContentPage>
