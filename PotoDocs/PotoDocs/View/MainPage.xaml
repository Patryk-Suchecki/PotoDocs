<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:PotoDocs.Shared.Models;assembly=PotoDocs.Shared"
             xmlns:viewmodel="clr-namespace:PotoDocs.ViewModel"
             x:Class="PotoDocs.View.MainPage"
             x:DataType="viewmodel:MainViewModel"
             Title="Twoje zlecenia">

    <VerticalStackLayout Padding="15" Spacing="15">

        <!-- Powitanie użytkownika -->
        <Label Text="{Binding UserDto.FirstName, StringFormat='Cześć {0}!'}"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="Black"
               Margin="0,15,0,0" />

        <!-- Tytuł sekcji -->
        <Label Text="Twoje zlecenia"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="Red"
               Margin="0,10,0,0" />

        <!-- Lista zleceń -->
        <CollectionView ItemsSource="{Binding Orders}" SelectionMode="None" VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:OrderDto">
                    <Frame Padding="10" Margin="5,0" HasShadow="False" BorderColor="LightGray">
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <!-- Dane po lewej stronie -->
                            <VerticalStackLayout Grid.Column="0" Spacing="5">
                                <Label Text="{Binding CompanyName}" FontAttributes="Bold" FontSize="16" />
                                <Label Text="{Binding LoadingDate, StringFormat='{0:dd.MM.yyyy}'}"
                                       FontSize="14" TextColor="Gray" />
                            </VerticalStackLayout>

                            <!-- Dane po prawej stronie
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End">
                                <Label Text="{Binding StatusText}"
                                       FontSize="14"
                                       TextColor="{Binding StatusColor}" />
                            </VerticalStackLayout>
                            -->
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Przycisk "Pokaż więcej" 
        <Button Text="Pokaż więcej"
                Command="{Binding ShowMoreCommand}"
                TextColor="White"
                FontFamily="RobotoBold"
                FontSize="20"
                CornerRadius="15"
                WidthRequest="200"
                HeightRequest="48"
                HorizontalOptions="Center"
                Padding="10,5">
            <Button.Background>
                <LinearGradientBrush EndPoint="1,0">
                    <GradientStop Color="#8C0000" Offset="0.0" />
                    <GradientStop Color="#BC0000" Offset="1.0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        -->
    </VerticalStackLayout>
</ContentPage>
