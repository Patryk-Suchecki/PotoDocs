<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:view="clr-namespace:PotoDocs.View"
       x:Class="PotoDocs.AppShell">
    <FlyoutItem Title="Menu" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent 
        Title="Main" 
        ContentTemplate="{DataTemplate view:MainPage}" 
        Route="MainPage" />
        
        <ShellContent
        Title="Zlecenia"
        Icon="orders.svg"
        ContentTemplate="{DataTemplate view:OrdersPage}"
        Route="OrdersPage" />

        <ShellContent
        Title="Kierowcy"
        Icon="drivers.svg"
        ContentTemplate="{DataTemplate view:DriversPage}"
        Route="DriversPage" />

        <ShellContent
        Title="Pobieranie"
        Icon="download.svg"
        ContentTemplate="{DataTemplate view:DownloadPage}"
        Route="DownloadPage" />
    </FlyoutItem>
    <ShellContent
            Title="Wyloguj"
            ContentTemplate="{DataTemplate view:LoginPage}"
            Route="LoginPage" />
</Shell>