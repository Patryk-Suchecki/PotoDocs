<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:view="clr-namespace:PotoDocs.View"
       x:Class="PotoDocs.AppShell">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate view:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Details"
        ContentTemplate="{DataTemplate view:DetailsPage}"
        Route="DetailsPage" />
    <ShellContent
        Title="OrderForm"
        ContentTemplate="{DataTemplate view:OrderFormPage}"
        Route="OrderFormPage" />
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate view:DriverFormPage}"
        Route="DriverFormPage" />

    <TabBar>
        <ShellContent
        Title="Zlecenia"
        ContentTemplate="{DataTemplate view:OrdersPage}"
        Route="OrdersPage" />

        <ShellContent
        Title="Kierowcy"
        ContentTemplate="{DataTemplate view:DriversPage}"
        Route="DriversPage" />

        <ShellContent
        Title="Pobieranie"
        ContentTemplate="{DataTemplate view:DownloadPage}"
        Route="DownloadPage" />

        <ShellContent
        Title="Wyloguj"
        ContentTemplate="{DataTemplate view:LoginPage}"
        Route="LoginPage" />
    </TabBar>
</Shell>
