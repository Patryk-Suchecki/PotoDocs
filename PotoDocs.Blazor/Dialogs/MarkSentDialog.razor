<MudDialog>
    <DialogContent>
        <MudText Class="mb-3">Wybierz datę wysłania dokumentów:</MudText>

        <MudDatePicker Label="Data wysłania"
                       @bind-Date="_date"
                       MaxDate="DateTime.Now"
                       Variant="Variant.Outlined"
                       Color="Color.Primary"
                       AutoClose="false" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Anuluj</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Zatwierdź</MudButton>
    </DialogActions>
</MudDialog>